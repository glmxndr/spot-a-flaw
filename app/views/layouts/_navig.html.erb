<div id="navig">
  <hr style="clear:both"/>
  <div id="user_nav">
    <% if current_user %>
      <b><%= link_to current_user.name, user_path(current_user) %></b>
      | <%= link_to "Logout", logout_path, :confirm => 'Are you sure?' %>
    <% else %>
      <%= link_to "Register", signup_path %>
      | <%= link_to "Login", login_path %>
    <% end %>
    | <%= link_to "About", about_url -%>
    | <%= link_to "Help", help_url -%>
  </div>

  <div id="category_nav">
    <%= link_to "Home", root_url -%> |
    <%= link_to "Topics", topics_url -%> |
    <%= link_to "Fallacies", fallacies_url -%> |
    <%= link_to "Tags", tags_url -%>
<% if admin_user -%>
    | <%= link_to "Users", users_url -%>
<% end -%>
  </div>
  <hr style="clear:both"/>
</div>
