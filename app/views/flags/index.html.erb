<h1>Listing flags</h1>

<table>
  <tr>
    <th>User</th>
    <th>Fallacy</th>
    <th>Topic</th>
    <th>Content</th>
  </tr>

<% for flag in @flags %>
  <tr>
    <td><%=h flag.user_id %></td>
    <td><%=h flag.fallacy_id %></td>
    <td><%=h flag.topic_id %></td>
    <td><%=h flag.content %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New flag', new_flag_path %>
