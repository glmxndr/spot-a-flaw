<h1>Editing flag</h1>

<% form_for(@flag) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :fallacy_id %><br />
    <%= f.text_field :fallacy_id %>
  </p>
  <p>
    <%= f.label :topic_id %><br />
    <%= f.text_field :topic_id %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @flag %> |
