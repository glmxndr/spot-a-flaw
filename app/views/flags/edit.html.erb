<h2 class="toc">Editing flag</h2>
<div class="toc">
<% form_for(@flag) do |f| %>
  <%= f.error_messages %>
    <%= f.label :topic_id,"Topic" %> <%= link_to @flag.topic.title, @flag.topic %><br/>
    <%= f.label :fallacy_id,"Fallacy" %>
    <%= select(
        "flag",
        "fallacy_id",
        Fallacy.all.collect {|p| [ p.shortname, p.id ] })
    %><br/>
    <%= f.text_area :content, :size => "40x10" %><br/>
    <%= f.submit "Send" %>
<% end %>
</div>

Back to <%= link_to 'topic', @flag.topic %> |
