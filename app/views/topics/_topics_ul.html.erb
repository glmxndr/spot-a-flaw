<ul class="topic list">
<% for topic in topics %>
  <li>
      <span style="display:none" class="creation"><%= topic.created_at %></span>
      <span style="display:none" class="update"><%= topic.updated_at %></span>
      <% if enabled_user %>
        <span class="action"><%= link_to 'Edit', edit_topic_path(topic) %></span>
      <% end %>
      <% if admin_user -%>
        <span class="action"><%= link_to 'Destroy', topic,
              :confirm => 'Are you sure?',
              :method => :delete %></span>
      <% end -%>
    <span class="topic title"><%= link_to topic.title,
      topic_url(topic) %></span>
  </li>
<% end %>
</ul>
