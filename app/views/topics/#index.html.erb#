<h1>Listing topics</h1>

<ul class="topic list">
<% for topic in @topics %>
  <li>
    <div class="topic title">
      <strong><%=h topic.title%></strong>
    </div>
    <div class="topic desc">
      <p><em><%=textilize topic.origin %></em></p>
      <p><%= link_to 'Show', topic %>
      <% if enabled_user %>
        | <%= link_to 'Edit', edit_topic_path(topic) %>
      <% end %>
      <% if admin_user -%>
        | <%= link_to 'Destroy', topic,
              :confirm => 'Are you sure?',
              :method => :delete %>
      <% end -%>
      </p>
    </div>
  </li>
<% end %>
</ul>

<br />

<%- if enabled_user -%>
<%= link_to 'New topic', new_topic_path -%>
<%- end -%>
