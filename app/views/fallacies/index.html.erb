<h1>Listing fallacies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Short name</th>
    <th>Content</th>
  </tr>

<% for fallacy in @fallacies %>
  <tr>
    <td><%=h fallacy.title %></td>
    <td><%=h fallacy.shortname %></td>
    <td><%=textilize fallacy.content %></td>
    <td><%= link_to 'Show', fallacy %></td>
    <td><%= link_to 'Edit', edit_fallacy_path(fallacy) %></td>
    <td><%= link_to 'Destroy', fallacy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fallacy', new_fallacy_path %>
