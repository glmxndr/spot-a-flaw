<h1 class="toc">Fallacies Page</h1>

<h2 class="toc" id="all">All fallacies</h2>
<div class="toc all">

<%= render :partial => 'index_sort' %>
<%= render :partial => 'fallacies_ul', :locals => {:fallacies => @fallacies} %>
</div>

<%- if enabled_user -%>
<h2 class="toc" id="new">New fallacy</h2>
<div class="toc new closed">
<% form_for(Fallacy.new) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :shortname %><br />
    <%= f.text_field :shortname %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
</div>
<%- end -%>

